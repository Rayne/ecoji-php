{
  "name": "rayne/ecoji",
  "description": "Encodes (and decodes) data as emojis. Implementation of the Ecoji Standard.",
  "keywords": [
    "base1024",
    "ecoji",
    "emoji",
    "encoding",
    "decoding"
  ],
  "type": "library",
  "require-dev": {
    "ext-json" : "*",
    "friendsofphp/php-cs-fixer": "^2.10",
    "phpunit/phpunit": "^6.0"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dennis Meckel"
    }
  ],
  "require": {
    "php": "^7.0",
    "ext-mbstring" : "*"
  },
  "suggest": {
    "ext-posix" : "Needed by the CLI script /bin/ecoji"
  },
  "autoload": {
    "psr-4": {
      "Rayne\\Ecoji\\": [
        "src",
        "tests"
      ]
    }
  },
  "bin": [
    "bin/ecoji"
  ],
  "scripts": {
    "format": "php-cs-fixer fix",
    "test": "phpunit"
  }
}
